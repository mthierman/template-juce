{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "baseUrl": "./",
        "paths": {
            "root/*": ["./*"],
            "gui/*": ["gui/*"],
            "components/*": ["gui/components/*"],
            "css/*": ["gui/css/*"],
            "images/*": ["gui/images/*"],
            "public/*": ["gui/public/*"],
            "src/*": ["src/*"]
        },
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "jsx": "react-jsx",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "isolatedModules": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["gui", "**/*.config.ts"]
}
